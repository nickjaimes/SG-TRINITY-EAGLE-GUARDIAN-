# ---- Begin Continuous Loop (Basic Demo) ----
print("âš™ Entering Demonstration Monitor Loop (Ctrl+C to exit)\n")

try:
    for cycle in range(1, 6):  # Demo 5 cycles
        print(f"--- AI Cycle {cycle} ---")

        # Update signals
        new_events = [{"domain": "system", "severity": 0.03 * cycle, "message": f"Tick {cycle}"}]
        signals = eagle.collect_and_process(new_events)
        alerts = eagle.detect_anomalies(signals)

# ---- Purpose Assessment (Optional) ----
if system_state["purpose_alignment_score"] < 0.6:
    raise Exception("âš  Initial purpose alignment too low. Aborting TRINITY activation.")
else:
    print(f"âœ” Purpose alignment confirmed: {system_state['purpose_alignment_score']:.2f}\n")

# ---- EAGLE EYE Setup ----
print("ðŸ¦… Activating EAGLE EYE...")
raw_events = [
    {"domain": "system", "severity": 0.1, "message": "Startup stable"},
    {"domain": "network", "severity": 0.05, "message": "Connectivity OK"},
]
signals = eagle.collect_and_process(raw_events)
alerts = eagle.detect_anomalies(signals)
